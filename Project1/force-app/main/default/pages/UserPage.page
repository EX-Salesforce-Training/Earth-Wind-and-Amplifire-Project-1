<apex:page controller="UserPageController">
    <apex:form >
        <apex:pageBlock title="Guild Member Record: {!member.Name}">
            
            <apex:pageBlockSection title="Information" columns="2">
                <apex:outputField value="{!member.Name}"/>
                <apex:outputField value="{!member.Age__c}"/>
                <apex:outputField value="{!member.Guild_Hall__c}">
                    <apex:inlineEditSupport />
                </apex:outputField>                 
                <apex:outputField value="{!member.Race__c}"/>
                <apex:outputField value="{!member.Class__c}"/>
                <apex:outputField value="{!member.Date_Hired__c}"/>
                <apex:outputField value="{!member.Skills__c}">
                	<apex:inlineEditSupport />
                </apex:outputField>
            </apex:pageBlockSection>
                    
            <apex:pageBlockSection title="Level: {!member.Total_Level__c}">
                
            	<apex:pageBlockTable value="{!member}" var="lvl">
            		<apex:column headerValue="Artificer Level" rendered="{!member.Artificer_Level__c>0}">
                    	<apex:outputField value="{!lvl.Artificer_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                	<apex:column headerValue="Barbarian Level" rendered="{!member.Barbarian_Level__c>0}">
                    	<apex:outputField value="{!lvl.Barbarian_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                	<apex:column headerValue="Bard Level" rendered="{!member.Bard_Level__c>0}">
                    	<apex:outputField value="{!lvl.Bard_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                	<apex:column headerValue="Cleric Level" rendered="{!member.Cleric_Level__c>0}">
                    	<apex:outputField value="{!lvl.Cleric_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column> 
                	<apex:column headerValue="Druid Level" rendered="{!member.Druid_Level__c>0}">
                    	<apex:outputField value="{!lvl.Druid_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                	<apex:column headerValue="Fighter Level" rendered="{!member.Fighter_Level__c>0}">
                    	<apex:outputField value="{!lvl.Fighter_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                	<apex:column headerValue="Monk Level" rendered="{!member.Monk_Level__c>0}">
                		<apex:outputField value="{!lvl.Monk_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                	<apex:column headerValue="Paladin Level" rendered="{!member.Paladin_Level__c>0}">
                    	<apex:outputField value="{!lvl.Paladin_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                	<apex:column headerValue="Ranger Level" rendered="{!member.Ranger_Level__c>0}">
                    	<apex:outputField value="{!lvl.Ranger_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column> 
                	<apex:column headerValue="Rogue Level" rendered="{!member.Rogue_Level__c>0}">
                    	<apex:outputField value="{!lvl.Rogue_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                	<apex:column headerValue="Sorcerer Level" rendered="{!member.Sorcerer_Level__c>0}">
                    	<apex:outputField value="{!lvl.Sorcerer_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                	<apex:column headerValue="Warlock Level" rendered="{!member.Warlock_Level__c>0}">
                    	<apex:outputField value="{!lvl.Warlock_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                	<apex:column headerValue="Wizard Level" rendered="{!member.Wizard_Level__c>0}">
                    	<apex:outputField value="{!lvl.Wizard_Level__c}">
                    		<apex:inlineEditSupport />
                    	</apex:outputField>
                	</apex:column>
                    
				</apex:pageBlockTable>
            	<center>
                	<apex:commandButton value="Level Up"/>
            	</center>
        	</apex:pageBlockSection>
            
        	<apex:pageBlockSection title="Inventory" rendered="{!items.size>0}">
            	<apex:pageBlockTable value="{!items}" var="item">
            		<apex:column value="{!item.Name}"/>
                	<apex:column value="{!item.Item_Type__c}"/>
                	<apex:column value="{!item.Properties__c}"/>
                    <apex:column value="{!item.Value__c}"/>
            	</apex:pageBlockTable>
        	</apex:pageBlockSection>
            
            <apex:pageBlockSection title="Quests" rendered="{!quests.size>0}">
            	<apex:pageBlockTable value="{!quests}" var="quest">
            		<apex:column value="{!quest.Name}"/>
            	</apex:pageBlockTable>
            </apex:pageBlockSection>
            
            <apex:pageBlockSection title="Party" rendered="{!party!=null}">
            	<apex:outputField rendered="{!party!=null}" value="{!party.party__r.Name}"/>
            </apex:pageBlockSection>
            
            <center>
                <apex:commandButton value="Save" action="{!Save}"/>
            </center>
        </apex:pageBlock>
    </apex:form>
</apex:page>